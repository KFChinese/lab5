    <body>
        <main>
            <h1>
                Cool Images
            </h1>
            <form action="/search">
                <input type="text" size="15" placeholder="Type keyword" name="keyword"/><br><br>
                <button>
                    Search
                </button>
                <br><a id="favLink" href="/getkeywords"> See Favorites </a>
            </form>
            <hr>
            <div id="resultsContainer">
            <% for ( let i=0; i < imageUrlArray.length; i++) { %>
            <%- (i % 3 == 0)?"<br>":"" %>
            <img class="image" src="<%= imageUrlArray[i] %>" width="200" height='200'/>
            <img class='favoriteIcon' src='img/favorite.png' width='20'>
            <% } %>
            <br>
            </div>
        </main>
